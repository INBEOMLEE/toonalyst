<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	<select id="listAll"  resultType="com.toonalyst.domain.board.BoardDTO">
		SELECT * FROM tbl_toonalyst_board
		WHERE bcategory = 0
	</select>
	
	<select id="read" parameterType="int" resultType="com.toonalyst.domain.board.BoardDTO">
		SELECT * FROM tbl_toonalyst_board
		WHERE bno = #{bno}
	</select>
	

    <insert id="register" parameterType="com.toonalyst.domain.board.BoardDTO">          
       INSERT INTO toonalyst_board (bno, btitle, bcontent,btext,bcategory, bwriter)
        VALUES(toonalyst_board_seq_bno.NEXTVAL,#{btitle}, #{bcontent}, #{btext}, #{bcategory}, #{bwriter})       
   </insert>	
	
	
</mapper>














